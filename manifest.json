{
    "name": "LocalPass",
    "version": "1.0",
    "description": "Local Password Manager",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "browser_action": {
        "default_popup": "src/popup.html"
      },
    "permissions": ["activeTab", "declarativeContent", "storage", "*://*/*"],
    "manifest_version": 2
}